<% unless @inscriptions.empty? %>
  <% @inscriptions.each_with_index do |inscription, index| %>
    <% student = inscription.student %>
    <% offset = index * 1300 %>
    <div class="body-pdf" style="margin-top: <%= offset %>px">
      <div class="moldura">
        <%= wicked_pdf_image_tag(inscription.classroom.school_year.background_image, :class => 'background-image') if inscription.classroom.school_year.background_image.present? %>
      </div>
      <div class="pdf-container">
        <div class="wrapper">

        <div class="ghost"></div>

          <div class="pdf-title">
            <h2> O Projeto Grael certifica que</h1>
            <h1> <%= student.name %> </h2>
            <% if inscription.situation == "participant"%>
              <h2> participou do </h2>
            <% else %>
              <h2> concluiu com sucesso o</h2>
            <% end %>
            <% if has_professionalized inscription.classroom %>
              <h2 class="inscription">Programa Profissionalizante</h2>
            <% elsif is_sport? inscription.classroom %>
              <h2 class="inscription">Programa de Desenvolvimento Esportivo </h2>
            <% elsif is_environmental? inscription.classroom %>
              <h2 class="inscription">Programa Ambiental</h2>
            <% end %>
            <h2><%= inscription.get_semester %></h2>
          </div>

          <div class="secondary-logo"></div>

          <table class="info-table">
            <thead>
              <tr>
                <th>Módulos Cursados</th>
                <th>Carga horária</th>
                <th>Instrutor(a)</th>
              </tr>
            </thead>

            <tbody>
              <% if @classroom.main_id.present? %>
                <tr>
                  <% unless inscription.student_classroom_subjects.where(classroom_subject: @classroom.main_id, show: true).empty? %>
                    <% unless @main_classroom_subject.subject.leveled? %>
                      <td>
                        <%= @main_classroom_subject.subject.name %>
                      </td>
                    <% else %>
                      <td>
                        <%= @main_classroom_subject.subject.name %>-<%= get_subject_history(inscription, @main_classroom_subject).subject_level&.name %>
                      </td>
                    <% end %>
                    <td>
                      <%= @main_classroom_subject.subject.workload %>
                    </td>

                    <td>
                      <div>
                        <%= wicked_pdf_image_tag(@main_classroom_subject.teacher.user.signature, :class => 'signature-instructor') if @main_classroom_subject.teacher.user.signature.present? %>
                      </div>
                      <%= @main_classroom_subject.teacher.name %>
                    </td>
                  <% end %>
                </tr> 
              <% end %>

              <% @classroom_subjects.each do |classroom_subject| %>
                <% next if classroom_subject.id == @classroom.main_id %>
                <tr>
                  <% unless inscription.student_classroom_subjects.where(classroom_subject: classroom_subject, show: true).empty? %>
                    <% unless classroom_subject.subject.leveled? %>
                      <td><%= classroom_subject.subject.name %></td>
                    <% else %>
                      <td>
                        <%= classroom_subject.subject.name %>-<%= get_subject_history(inscription, classroom_subject).subject_level&.name %>
                      </td>
                    <% end %>

                    <td><%= classroom_subject.subject.workload %></td>

                    <td> 
                      <div>
                        <%= wicked_pdf_image_tag(classroom_subject.teacher.user.signature, :class => 'signature-instructor') if classroom_subject.teacher.user.signature.present? %>
                      </div>
                      <%= classroom_subject.teacher.name %>
                    </td>

                  <% end %>
                </tr>    
              <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="pdf-container">
    <div class="wrapper">
      <h1>Não há alunos aprovados</h1>
    </div>
  </div>
<% end %>
