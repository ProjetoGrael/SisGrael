<div class="flex-conteiner-monitoring">
    <div class="title-monitoring">
        <h2>Presença por Disciplina</h2>
        <%= link_to 'EXPORTAR PARA EXCEL', monitoring_concept_path({}, format: :xlsx), class: "generate-button school-year-monitoring-link"%>
    </div>
    <div class="backButtonMonitoring">
        <a id="back-page" class="edit-button ">Voltar</a>    
    </div>
    <div class="card-graphic">
        <%= form_tag(:per_school_year_concept_grafic, method: :get, id: 'form_of_school_year') do  %>
            <%= select_tag(:school_year_id,options_from_collection_for_select(Academic::SchoolYear.all, "id", "name", @school_year_id),onChange: 'this.form.submit();',class:"selectWidth")%> 
            <%= select_tag(:subject_id,options_from_collection_for_select(Academic::Subject.all, "id", "name", @subject_id),prompt: "Escolha uma materia",onChange: 'this.form.submit();', class:"selectWidth")%> 
        <% end %>   
        
        <% if @subject.present?%>
            <%= pie_chart @date_first,height: "400px", xtitle: "Quantidade", ytitle: "Presença", library: { barSliceText: 'value-and-percent',scales: { xAxes: [{ ticks: { stepSize: 10, beginAtZero: true}}]}}%>

            
        <% end %>
    </div>
</div>