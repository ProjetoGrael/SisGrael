<h1>Estados</h1>
<p><%= notice if notice != "You are not authorized to access this page"%></p>

<% if(@states.any?) %>
  <div class="container-65">
      <div class="flex-end">
        <%= link_to 'Novo Estado', new_state_path, class:'edit-button' %>
        <%= link_to 'Voltar', secretary_index_path, class: 'edit-button', style: 'margin-left: 10px;' %>
      </div>
    </div>
        
      <% @states.each do |state| %>

          <div class="card">
            <div class="card-action">
              <div class="action-buttons">
                <%= link_to 'Editar', edit_state_path(state), class:"edit-button" %>
                <%= link_to 'Excluir', state, method: :delete, class:"delete-button" %>
              </div>
            </div>

            <div class="card-content">
              <div class="titles" style="padding: 30px 20px;">
                <%= state.name %>
              </div>
            </div>
          </div>
          
      <% end %>

      
<% else %>
  <p>Não há estados a serem exibidos.</p>
  <%= link_to 'Novo Estado', new_state_path, class:'edit-button' %>
  <%= link_to 'Voltar', secretary_index_path, class: 'edit-button' %>
<% end %>

