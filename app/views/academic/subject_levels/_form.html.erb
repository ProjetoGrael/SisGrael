<%= form_with(model: subject_level, local: true, class: 'container-85') do |form| %>
  <% if subject_level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subject_level.errors.count, "error") %> impediu este Nivel de ser salvo:</h2>

      <ul>
      <% subject_level.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-show-container">
      <div class="grid-2-columns grid">
        <div class="field-info">
          <p>Nome:</p>
          <%= form.text_field :name, id: :subject_level_name %>
        </div>

        <div class="field-info">
          <p>Ordem do nível:</p>
          <%= form.number_field :order, id: :subject_level_order %>
        </div>

        <div class="field-info">
          <p>Status:</p>
          <%= form.select :active, active_options, id: :subject_level_active %>
        </div>
      </div>
    </div>
  </div>

  <div class="line-buttons" style="display: block;">
    <%= link_to 'Voltar', subject_level.subject, class: 'generate-button', style: 'display: inline;' %>
    <%= form.submit 'Salvar Nível de Disciplina', class: 'generate-button', style: 'display: inline;' %>
  </div>

  <%= form.hidden_field :subject_id, value: subject_level_subject_value(subject_level), id: :subject_level_subject_id %>

<% end %>
