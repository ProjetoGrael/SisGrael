<h1>Dados do Educador</h1>

<p id="notice"><%= notice if notice != "You are not authorized to access this page"%></p>

<div class="show-container">

<% if @teacher.active? %> 
  <div class="card-show">
<% else %>
  <div class="card-show" style="background-color: #e5e5e5;">
<% end %>
    <div class="button-students">
      <%= link_to 'Editar', edit_teacher_path(@teacher), class:'edit-button' %>
      <%= link_to 'Voltar', teacher_panel_path(@teacher), class: 'edit-button' %>
    </div>

    <div class="photo-profile action-photo">
      <div class="registration-number">
        <% if @teacher.photo.present? %>
          <%= image_tag @teacher.photo.small.url, :class => 'user-photo' %>
        <% else %>
          <% if pretty_sex(@teacher.sex) == 'Masculino' %>
            <div class="user-photo men-teacher-icone-panel icon"></div>
          <% else %>
            <div class="user-photo women-teacher-icone-panel icon"></div>
          <% end %>
        <% end %>
        <p><%= @teacher.active ? 'Ativo' : 'Inativo' %></p>
      </div>
      <p class="name-student"><%= @teacher.name %></p>
    </div>
    
    <div class="card-show-container">
      <p class="title-card-show-container"><span>1</span> Informações Pessoais</p>
      <div class="grid">
        <div class="field-info">
          <p>Data de Nascimento:</p>
          <%= l @teacher.birth %>
        </div>
        
        <div class="field-info">
          <p>Sexo:</p>
          <%= pretty_sex(@teacher.sex) %>
        </div>
        
        <div class="field-info">
          <p>Etnia:</p>
          <%= @teacher.ethnicity %>
        </div>
        
        <div class="field-info">
          <p>Nacionalidade:</p>
          <%= @teacher.nationality %>
        </div>
        
        <div class="field-info">
          <p>Naturalidade:</p>
          <%= @teacher.naturalness %>
        </div>
        
        <div class="field-info">
          <p>RG:</p>
          <%= @teacher.rg %>
        </div>
        
        <div class="field-info">
          <p>Órgão Expedidor:</p>
          <%= @teacher.issuing_agency %>
        </div>
        
        <div class="field-info">
          <p>Data de Emissão:</p>
          <%= pretty_date(@teacher.issuing_date) %>
        </div>
        
        <div class="field-info">
          <p>CPF:</p>
          <%= @teacher.cpf %>
        </div>
      </div>
    </div>

    <div class="divider"></div>

    <div class="card-show-container">
      <p class="title-card-show-container"><span>2</span> Endereço</p>
      <div class="grid">
        <div class="field-info">
          <p>Endereço:</p>
          <%= @teacher.address %>
        </div>
        
        <div class="field-info">
          <p>CEP:</p>
          <%= @teacher.cep %>
        </div>
      </div>
    </div>

    <div class="divider"></div>

    <div class="card-show-container">
      <p class="title-card-show-container"><span>3</span> Contato</p>
      <div class="grid-3-columns grid">
        <div class="field-info">
          <p>Email:</p>
          <% if @teacher.email == "" %>
            <p>N/A</p>
          <% else %>
            <%= @teacher.email %>
          <% end %>
        </div>
        
        <div class="field-info">
          <p>Telefone:</p>
          <% if @teacher.phone == "" %>
            <p>N/A</p>
          <% else %>
            <%= @teacher.phone %>
          <% end %>
        </div>
      
        <div class="field-info">
          <p>Celular:</p>
          <% if @teacher.mobile_phone == "" %>
            <p>N/A</p>
          <% else %>
            <%= @teacher.mobile_phone %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>


