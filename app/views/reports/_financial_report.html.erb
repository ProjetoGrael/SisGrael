<% if(@records.any?) %>
<div class='table-pdf'>
    <table>
      <thead>
        <tr>
          <th>Data</th>
          <th>Pagador</th>
          <th>Recebedor</th>

          <% if @kind != 'account' %>
            <th>Conta</th>
          <% end %>

          <% if @kind != 'transaction_category'%>
            <th>Natureza</th>
          <% end %>

          <th>Descrição</th>
          <th>Valor</th>
        </tr>
      </thead>

      <tbody>
        <% @records.each do |transaction| %>
          <tr>
            <td><%=l transaction.transaction_date %></td>
            <td><%= transaction.payer.name %></td>
            <td><%= transaction.receiver.name %></td>

            <% if @kind != 'account' %>
              <td><%= display_account(transaction.account) %></td>
            <% end %>

            <% if @kind != 'transaction_category'%>
              <td><%= transaction.transaction_category.description %></td>
            <% end %>
            <td><%= transaction.description %></td>
            <td><%= number_to_currency transaction.value, unit: 'R$', separator: ',', delimiter: '.' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <p class="saldo">Saldo: <%= number_to_currency @current_value, unit: 'R$', separator: ',', delimiter: '.' %></p>
<% else %>
<p>Não há transações a serem exibidas.</p>
<% end %>
