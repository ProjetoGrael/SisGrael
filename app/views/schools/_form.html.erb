<%= form_with(model: @school, local: true, class: 'container-85') do |f| %>
<% if @school.errors.any? %>
    <script>
        $(document).ready(function(){
          swal("<h2>"+"<%= pluralize(@school.errors.count, "erro") %> proibiu de salvar esta instituição:"
          +"</h2><ul>"+"<% @school.errors.full_messages.each do |message| %>"
          +"<li>"+"<%= message %>"+"</li>"+"<% end %>"+"</ul>","","");
        });
    </script>
  <% end %>

  <div class="card">
    <div class="card-show-container">
      <div class="grid-1-column grid">
        <div class="field-info">
          <p>Nome:</p>
          <%= f.text_field :name %>
        </div>
      </div>
    </div>
  </div>

  <div class="line-buttons" style="display: block;">
    <%= link_to 'Voltar', schools_path, class: 'generate-button', style: 'display: inline;' %>
    <%= f.submit 'Salvar Escola', class: 'generate-button', style: 'display: inline;' %>
  </div>

<% end %>