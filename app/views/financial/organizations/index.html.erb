<% if (notice) %>
  <script>
      $(document).on('turbolinks:load', function(){
        swal("<%= notice if notice != "You are not authorized to access this page"%>","","");
      });
  </script>
<% end %>

<h1>Classes</h1>

<% if (@institutions.any?) %>
  <div class="table">
    <%= link_to 'Nova Classe', new_organization_path, class:'button-new' %>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Status</th>
          <th>Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @institutions.each do |institution| %>
          <tr>
            <td><div class="linkable"><%= institution.name %></div></td>
            <td><div class="linkable"><%= translate_status(institution.status) %></div></td>
            <td><div class="linkable">
              <%= link_to 'Editar', edit_organization_path(institution), class:"green-action-button action-button" %>
              <%= link_to 'Excluir', organization_path(institution), method: :delete, class:"red-action-button action-button" %>
            </div></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to cash_book_path, class:'button-back' do %>
    <div class='icon-back'></div>
    <% end %>
  </div>
  <%= paginacao(@institutions) %>
<% else %>
  <p>Não há classes a serem exibidas.</p>
  <%= link_to 'Nova Classe', new_organization_path, class:'button-new' %>
  <%= link_to cash_book_path, class:'button-back' do %>
    <div class='icon-back'></div>
    <% end %>
<% end %>
