<div class="login col-md-6 col-md-offset-3">

  <%= image_tag 'logo_amarela.svg', class: 'logo' %>
  
  <h1 class="titulo">SisGrael</h1>

  <p><%= alert %></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <%= f.email_field :email, placeholder: 'Login', class: 'form-control caixa-login caixa-email', id: 'login-email', autofocus: true, autocomplete: "email" %>
    
    
    <%= f.password_field :password, placeholder: 'Senha', class: 'form-control caixa-form-login caixa-senha', id: 'login-senha', autocomplete: "current-password" %>
    

    <% if devise_mapping.rememberable? -%>

      <%= f.label :remember_me, id: "checkbox", class: "manter-conectado" do %>
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <p>Mantenha-me conectado</p>
      <% end %>
        
    <% end %>

    <%= f.submit "Entrar", class: "botao-login" %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
<%= render "layouts/footerlogin"%>

