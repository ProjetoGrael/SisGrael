<%= form_with(model: @city, local: true, class: 'container-85') do |f| %>
  <% if @city.errors.any? %>
    <script>
        $(document).ready(function(){
          swal("<h2>"+"<%= pluralize(@city.errors.count, "erro") %> proibiu de salvar esta instituição:"
          +"</h2><ul>"+"<% @city.errors.full_messages.each do |message| %>"
          +"<li>"+"<%= message %>"+"</li>"+"<% end %>"+"</ul>","","");
        });
    </script>
  <% end %>

  <div class="card">
    <div class="card-show-container">
      <div class="grid-2-columns grid">
        <div class="field-info">
          <p>Estado:</p>
          <%= f.select :state_id, state_options %>
        </div>

        <div class="field-info">
          <p>Nome:</p>
          <%= f.text_field :name %>
        </div>
      </div>
    </div>
  </div>

  <div class="line-buttons" style="display: block;">
    <%= link_to 'Voltar', cities_path, class: 'generate-button', style: 'display: inline;' %>
    <%= f.submit 'Salvar Cidade', class: 'generate-button', style: 'display: inline;' %>
  </div>

<% end %>