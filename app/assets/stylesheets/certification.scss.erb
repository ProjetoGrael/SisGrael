@import "utilities/variables";

@font-face {
  font-family: Nunito;
  font-weight: light;
  src: url("<%= ApplicationHelper.asset_data_base64('Nunito-Light.ttf') %>");
}

.body-pdf {
  color: #000;
  font-family: 'Nunito';
}

.moldura, .background-image {
    position: absolute;
    width: 1900px;
    height: 1340px;
}

.background-image {
    opacity: 1;
}

.pdf-container {
    margin: 0 auto;
    width: 1900px;
    height: 1280px;
    text-align: center;
    position: relative;
    font-size: 0.9em;
}

.pdf-title {
    margin: 0 auto;
    width: 100%;
}

.primary-logo {
    float: left;
}

.primary-logo img {
    width: 250px;
    margin-left: 70px;
    margin-top: 40px;
}

.secondary-logo {
    float: right;
    margin-right: 60px;
    margin-top: 70px;
}

.pdf-container h1 {
    font-size: 3.5em;
    font-weight: bold;
    padding: 3px 0;
    color: $secondary-blue;
}
.pdf-container p {
    font-size: 2em;
}
.pdf-container h2 {
    font-size: 2.3em;
}

h2.inscription {
    font-size: 2.3em !important;
}

.pdf-container h3 {
    font-size: 2.5em;
    color: $secondary-blue;
    padding: 20px 0;
}

.info-table {
    margin: 15px auto;
    font-size: 1.8em;
    width: 70%;
}

.info-table th {
    font-size: 1.2em;
}

.info-table td {
    margin-top: 50px;
    width: 40%;
}

.info-table td:nth-child(2) {
    width: 20%;
}

.info-table td:nth-child(3) {
    width: auto;
    position: relative;
    white-space: nowrap;
}

.info-table img {
    max-width: 320px;
    max-height: 100px;
}

.info-table p {
    position: absolute;
    font-size: inherit;
    top: 50%;
    left: 50%;
    -ms-transform: translate(-50%, -40%);
    -webkit-transform: translate(-50%, -40%);
    transform: translate(-50%,-40%);
}

